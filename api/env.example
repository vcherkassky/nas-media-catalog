# UPnP Media Server Settings
UPNP_DISCOVERY_TIMEOUT=10                 # UPnP discovery timeout in seconds
UPNP_SERVER_NAME=                         # Specific UPnP server name (empty = auto-discover)

# Server Settings
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Database Settings
DATABASE_URL=sqlite+aiosqlite:///./media_catalog.db

# Scanning Settings
MAX_SCAN_DEPTH=5
AUTO_SCAN_ON_STARTUP=true

# SMB Settings (for VLC-compatible playlists)
SMB_USERNAME=                             # SMB username for authentication
SMB_PASSWORD=                             # SMB password for authentication  
SMB_HOSTNAME=                             # SMB server hostname or IP address
SMB_ENABLED=false                         # Enable SMB support for playlist generation

# Logging
LOG_LEVEL=INFO
